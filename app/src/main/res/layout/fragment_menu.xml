<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="97dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/current_game_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/alpha30"
                android:elevation="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Aktuální hra"
                    android:textColor="@color/font_white"
                    android:textSize="32sp"
                    android:textStyle="" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/ic_running"
                    tools:ignore="RtlHardcoded" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/new_game_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/alpha30"
                android:elevation="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Nová hra"
                    android:textColor="@color/font_white"
                    android:textSize="32sp"
                    android:textStyle="" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/ic_soccer"
                    tools:ignore="RtlHardcoded" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/sort_panels_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/alpha30"
                android:elevation="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Seřazení panelů"
                    android:textColor="@color/font_white"
                    android:textSize="32sp"
                    android:textStyle="" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/ic_sort"
                    tools:ignore="RtlHardcoded" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/statistics_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/alpha30"
                android:elevation="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Statistiky"
                    android:textColor="@color/font_white"
                    android:textSize="32sp"
                    android:textStyle="" />


                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/ic_stats"
                    tools:ignore="RtlHardcoded" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/game_store_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/alpha30"
                android:elevation="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Koupit hry"
                    android:textColor="@color/font_white"
                    android:textSize="32sp"
                    android:textStyle="" />


                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/ic_store"
                    tools:ignore="RtlHardcoded" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/settings_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/alpha30"
                android:elevation="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Nastavení"
                    android:textColor="@color/font_white"
                    android:textSize="32sp"
                    android:textStyle="" />


                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/ic_settings"
                    tools:ignore="RtlHardcoded" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/account_and_licence_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/alpha30"
                android:elevation="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Účet a licence"
                    android:textColor="@color/font_white"
                    android:textSize="32sp"
                    android:textStyle="" />


                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/ic_account"
                    tools:ignore="RtlHardcoded" />
            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>